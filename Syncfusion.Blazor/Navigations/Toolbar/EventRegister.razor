@namespace Syncfusion.Blazor.Navigations.Internal

@code {
    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public Action<ToolbarEventArgs> Handler { get; set; }

    [CascadingParameter]
    public SfToolbar Parent { get; set; }


    protected override void OnInitialized()
    {
        if (Name == null)
            throw new MissingMemberException($"Name must be provided to add event");
        Parent.EventAggregator.Add(Name, Handler);
    }
}
