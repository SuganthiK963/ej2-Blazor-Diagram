@namespace Syncfusion.Blazor.Charts.Internal
@using Syncfusion.Blazor.DataVizCommon
<CascadingValue Value="@this">
    <g id="@(Id + "_g")">
        <rect id="@Id" x="@DragRect.X.ToString(culture)" y="@DragRect.Y.ToString(culture)" width="@DragRect.Width.ToString(culture)" height="@DragRect.Height.ToString(culture)" stroke="@Stroke" stroke-width="@StrokeWidth" fill="@Fill" style="@cursorStyle" />
        @if (IsDrawCloseIcon)
        {
            <g id="@(Id.Replace("rect", "close"))" style="cursor:pointer; visibility: visible;" @onclick="RemoveCurrentElement">
                <circle id="@Close.Circle.Id" opacity="@Close.Circle.Opacity" fill="@Close.Circle.Fill" stroke="@Close.Circle.Stroke" stroke-width="1" cy="@Close.Circle.Cy.ToString(culture)" cx="@Close.Circle.Cx.ToString(culture)" r="@Close.Circle.R.ToString(culture)" />
                <path id="@Close.Path.Id" opacity="@Close.Path.Opacity" d="@Close.Path.Direction" stroke="@Close.Path.Stroke" stroke-width="2" fill="@Close.Path.Stroke" />
            </g>
        }
    </g>
</CascadingValue>