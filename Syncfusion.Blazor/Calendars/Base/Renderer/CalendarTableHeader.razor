@using System.Globalization;
@namespace Syncfusion.Blazor.Calendars.Internal
@typeparam TCalendarHeader
@inherits CalendarBase<TCalendarHeader>
<thead class="@WEEK_HEADER">
    <tr>
        @if (this.Parent.WeekNumber && CalendarRenderView == CalendarView.Month)
        {
            <th class="@WEEK_NUMBER"></th>
        }
        @for (int days = 0; days < this.DaysCount; days++)
        {
            <th>@(CultureInfo.CurrentCulture.TextInfo.ToTitleCase(this.ShortNames[days]))</th>
        }
    </tr>
</thead>